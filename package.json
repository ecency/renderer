{
  "name": "react-library-vite",
  "version": "0.0.0",
  "description": "A scaffold app for building a React component/library using Vite, ready for publication to npm",
  "author": "Tom Southall",
  "keywords": [],
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/react-library-vite.umd.js",
  "module": "./dist/react-library-vite.es.js",
  "exports": {
    ".": {
      "import": "./dist/react-library-vite.es.js",
      "require": "./dist/react-library-vite.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.3",
    "@testing-library/react": "^12.1.3",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^1.0.7",
    "c8": "^7.11.0",
    "eslint": "^8.9.0",
    "eslint-plugin-react": "^7.28.0",
    "jsdom": "^19.0.0",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-test-renderer": "^19.0.0",
    "typescript": "^5.7.3",
    "vite": "5.4.6",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
