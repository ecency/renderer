{
  "name": "@ecency/renderer",
  "version": "1.2.5",
  "description": "React components for rendering Hive posts using Ecency extensions",
  "keywords": [],
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/ecency-renderer.umd.js",
  "module": "./dist/ecency-renderer.es.js",
  "type": "module",
  "exports": {
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    ".": {
      "import": "./dist/ecency-renderer.es.js",
      "require": "./dist/ecency-renderer.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@ecency/render-helper": "^2.2.40",
    "@hiveio/dhive": "^1.3.2",
    "@testing-library/dom": "^8.11.3",
    "@types/node": "^22.10.5",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@types/remarkable": "^2.0.8",
    "@types/xmldom": "^0.1.34",
    "@vitejs/plugin-react": "^1.0.7",
    "c8": "^7.11.0",
    "clsx": "^2.1.1",
    "prettier": "^3.4.2",
    "react": "18",
    "react-dom": "18",
    "sass": "^1.83.1",
    "typescript": "^5.7.3",
    "vite": "5.4.6",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vitest": "^2.1.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "dependencies": {
    "@testing-library/react": "14",
    "medium-zoom": "^1.1.0"
  }
}
